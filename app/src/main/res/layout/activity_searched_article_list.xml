<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="indiabeeps.app.bayanapp.ArticleList"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginBottom="2dp"
        android:weightSum="7"
        android:id="@+id/sl"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:background="@color/colorPrimaryDark">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText2"
                android:hint="Enter Search keyword"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false"
                android:allowUndo="true"
                android:maxLines="1"
                android:minLines="1"
                android:singleLine="true"
                android:fadingEdge="horizontal|vertical"
                android:layout_weight="5.95"
                android:backgroundTint="#f5ededed"

                android:padding="3dp"
                android:nextFocusRight="@+id/editText1"

                android:layout_gravity="left|center_vertical"
                android:textColor="@color/colorPrimary" />


            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:src="@drawable/ic_search_24dp"

                android:layout_weight="1.72"
                android:layout_marginTop="-5dp"
                android:layout_marginBottom="-5dp"
                android:layout_marginRight="-8dp" />
        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:divider="#d2d2d2"
        android:dividerHeight="1dp"
        android:layout_gravity="bottom"
        android:scrollbarSize="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sl" />

</RelativeLayout>

