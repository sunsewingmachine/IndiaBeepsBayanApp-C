<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="indiabeeps.app.bayanapp.ArticleList"
    android:background="?attr/listBackground">


<RelativeLayout
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2dp"
        android:elevation="2dp"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal"
            android:padding="3dp">

            <EditText
                android:id="@+id/editText2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="5.95"
                android:allowUndo="true"
                android:backgroundTint="#f5ededed"
                android:fadingEdge="horizontal|vertical"
                android:hint="Enter Search keyword"
                android:maxLines="1"
                android:minLines="1"

                android:nextFocusRight="@+id/editText1"
                android:padding="3dp"

                android:singleLine="true"
                android:textColor="@color/colorPrimary" />


            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"

                android:layout_marginRight="-8dp"
                android:layout_marginBottom="-5dp"
                android:layout_weight="1.72"
                android:src="@drawable/ic_search_24dp" />
        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sl"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="bottom"
        android:divider="#d2d2d2"
        android:dividerHeight="1dp"
        android:scrollbarSize="2dp" />

</RelativeLayout>

